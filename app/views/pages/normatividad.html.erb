										<img src="/assets/pdf-icon.png" style="width: 90px; height: 80px;">
									</td>
							    </tr>
							</table>
						</div>
				    <% end %>
						<br>
						<div class="large-12 medium-12 small-12 columns">
							<p class="text-center">Última actualizacion de <%= @second_category.name %>: <strong><%= localize( @second_category.updated_at, format: :short) %></strong></p>
						</div>
			
				</section>
				
				<section role="tabpanel" aria-hidden="true" class="content" id="panel2-3">
	    			<% @third_category.documents.each do |document| %>
					    <div class="large-3 medium-3 columns end">
