<div class="row">
	<div class="large-12 medium-12 columns">
		<br>
		<h1 class="text-center" style="font-size: 55px;">Normatividad</h1>
		<br>
		<div class="panel callout text-center small-8 small-centered columns">
		  <p>Para <strong>descargar</strong> algún documento dar <strong>click</strong> en el nombre del archivo.</p>
		</div>
		<hr>

		

			<div class="small-12 large-centered columns show-for-large-up">
				<ul class="tabs" data-tab role="tablist">
				  <li class="tab-title"><a href="#panel2-1" class="text-center"style="width: 300px; border-bottom-style: outset; border-radius: 40px;margin-left:10px;"><%= @first_category.name %></a></li>
				  <li class="tab-title active"><a href="#panel2-2" class="text-center"style="width: 300px; border-bottom-style: outset; border-radius: 40px;margin-left:10px;"><%= @second_category.name %></a></li>
				  <li class="tab-title"><a href="#panel2-3" class="text-center"style="width: 300px; border-bottom-style: outset; border-radius: 40px;margin-left:10px;"><%= @third_category.name %></a></li>
				</ul>
			</div>

			<div class="tabs-content show-for-large-up">
				
				<section role="tabpanel" aria-hidden="false" class="content" id="panel2-1">

						<div class="large-4 medium-3 columns end">
							<table style="margin:auto;">
							    <tr>
				    			<% @first_category.documents.each do |document| %>
							    	<td>
								    	<%= link_to "#{document.title}", attachment_url(document, :file) %> 
										<img src="/assets/pdf-icon.png" style="width: 80px; height: 80px;">
									</td>
							    <% end %>
							    </tr>
							</table>
						</div>
						<br>
						<div class="large-12 medium-12 small-12 columns">
							<p class="text-center">Última actualizacion de <%= @first_category.name %>: <strong><%= localize( @first_category.updated_at, format: :short) %></strong></p>
						</div>

			    </section>


				<section role="tabpanel" aria-hidden="true" class="content active" id="panel2-2">
					  <div class="large-4 medium-3 columns end">
							<table style="margin:auto;">
							    <tr>
				    			<% @second_category.documents.each do |document| %>
							    	<td>
								    	<%= link_to "#{document.title}", attachment_url(document, :file) %> 
										<img src="/assets/pdf-icon.png" style="width: 80px; height: 80px;">
									</td>
							    <% end %>
							    </tr>
							</table>
						</div>
						<br>
						<div class="large-12 medium-12 small-12 columns">
							<p class="text-center">Última actualizacion de <%= @second_category.name %>: <strong><%= localize( @second_category.updated_at, format: :short) %></strong></p>
						</div>
			
				</section>
				
				<section role="tabpanel" aria-hidden="true" class="content" id="panel2-3">
				    <div class="large-4 medium-3 columns end">
							<table style="margin:auto;">
							    <tr>
				    			<% @third_category.documents.each do |document| %>
							    	<td>
								    	<%= link_to "#{document.title}", attachment_url(document, :file) %> 
										<img src="/assets/pdf-icon.png" style="width: 80px; height: 80px;">
									</td>
							    <% end %>
							    </tr>
							</table>
						</div>
						<br>
						<div class="large-12 medium-12 small-12 columns">
							<p class="text-center">Última actualizacion de <%= @third_category.name %>: <strong><%= localize( @third_category.updated_at, format: :short) %></strong></p>
						</div>
				</section>

			</div>

		<ul class="accordion show-for-small-up hide-for-large-up" data-accordion>
		  <li class="accordion-navigation">
		    <a href="#panel2a" style="border-radius: 40px; border-style: outset; color:white !important" class="text-center"><%= @first_category.name %></a>
		    <div id="panel2a" class="content active">
		      <ul class="accordion" data-accordion="myAccordionGroup">
		          	<table style="margin:auto;">
					    <tr>
		    			<% @first_category.documents.each do |document| %>
					    	<td>
						    	<%= link_to "#{document.title}", attachment_url(document, :file) %> 
								<img src="/assets/pdf-icon.png" style="width: 80px; height: 80px;">
							</td>
					    <% end %>
					    </tr>
					</table>
					<br>
					<div class="large-12 medium-12 small-12 columns">
						<p class="text-center">Última actualizacion de <%= @first_category.name %>: <strong><%= localize( @first_category.updated_at, format: :short) %></strong></p>
					</div>
		      </ul>
		    </div>
		  </li>
		  <li class="accordion-navigation">
		    <a href="#panel3a" style="border-radius: 40px; border-style: outset; color:white !important" class="text-center"><%= @second_category.name %></a>
		    <div id="panel3a" class="content">
		      <ul class="accordion" data-accordion="myAccordionGroup">
					<table style="margin:auto;">
					    <tr>
		    			<% @second_category.documents.each do |document| %>
					    	<td>
						    	<%= link_to "#{document.title}", attachment_url(document, :file) %> 
								<img src="/assets/pdf-icon.png" style="width: 80px; height: 80px;">
							</td>
					    <% end %>
					    </tr>
					</table>
					<br>
					<div class="large-12 medium-12 small-12 columns">
						<p class="text-center">Última actualizacion de <%= @second_category.name %>: <strong><%= localize( @second_category.updated_at, format: :short) %></strong></p>
					</div>		          
		      </ul>
		    </div>
		  </li>
		   <li class="accordion-navigation">
		    <a href="#panel4a" style="border-radius: 40px; border-style: outset; color:white !important" class="text-center"><%= @third_category.name %></a>
		    <div id="panel4a" class="content">
		      <ul class="accordion" data-accordion="myAccordionGroup">
	      			<table style="margin:auto;">
	      			    <tr>
	          			<% @third_category.documents.each do |document| %>
	      			    	<td>
	      				    	<%= link_to "#{document.title}", attachment_url(document, :file) %> 
	      						<img src="/assets/pdf-icon.png" style="width: 80px; height: 80px;">
	      					</td>
	      			    <% end %>
	      			    </tr>
	      			</table>
	      			<br>
	      			<div class="large-12 medium-12 small-12 columns">
	      				<p class="text-center">Última actualizacion de <%= @third_category.name %>: <strong><%= localize( @third_category.updated_at, format: :short) %></strong></p>
	      			</div>
		      </ul>
		    </div>
		  </li>

		</ul>
    	
	</div>
</div>

